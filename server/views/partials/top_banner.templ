package partials

templ TopBanner(title, backAction string) {
	<div class="mx-auto mb-2 flex items-center justify-between md:w-2/3 lg:w-1/2 xl:w-1/3">
		<h1 class="mb-0 py-2">{ title }</h1>
		if backAction != "" {
			<button
				class="py-2"
				hx-get={ templ.SafeURL(backAction) }
				hx-push-url="true"
				hx-target="main"
			>
				Back
			</button>
		}
	</div>
}
